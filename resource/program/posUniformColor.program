vs{
	#version 300 es
    layout(location = 0) in vec4 a_position;
	uniform mat4 mvp_matrix;
    void main()
    {
       gl_Position = mvp_matrix * a_position;
    }
}

fs{
	#version 300 es
	precision mediump float;
	uniform vec4 color;
	layout(location = 0) out vec4 outColor;
	void main()
	{
	  outColor = color;
	}
}

program:posUniformColor{
	posLoc=0
	mvpMatrix=mvp_matrix
	uniformColor=color
}